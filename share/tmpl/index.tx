: cascade base
: around content -> {
:   for $blog.entries -> $entry {
<article>
<: $entry.html_body() | mark_raw :>
</article>
:   }
:   if $blog.tags().size() {
<ul class="tags">
:     for $blog.tags() -> $tag {
<li><a href="<: uri_for($tag.site_path) :>"><: $tag.name :>(<: $tag.count :>)</a></li>
:      }
</ul>
:   }
: }
